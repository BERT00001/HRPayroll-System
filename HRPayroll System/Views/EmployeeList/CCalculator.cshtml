@model HRPayroll_System.Models.CCalculatorModel

@{
}

<h1> Contractual Calculator </h1>



<form class="row g-3" method="post" action="CCalculator">

    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> ID </label>
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="Id" readonly>
        </div>
    </div>

    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> FullName: </label>
        <div class="col-sm-10">
            <input class="form-control" type="text" placeholder="FullName" asp-for="Fullname" readonly>
        </div>
    </div>

    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> TIN: </label>
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="TIN" readonly>
        </div>
    </div>

    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-4 col-form-label"> Employee Type: </label>
        <input class="form-control" type="text" asp-for="EmployeeType" readonly />
    </div>

    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-4 col-form-label"> Employee Type: </label>
        <input class="form-control" type="number" asp-for="EmployeeType" readonly />
    </div>

    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-4 col-form-label"> Over all Salary: </label>
        <input id="absent" class="form-control" type="text" asp-for="OverallTotal" readonly/>

    </div>

    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-4 col-form-label"> No. of Days: </label>
        <input id="Absent" class="form-control" type="number" step="0.5" max="15.5" min="0" asp-for="Ndays">

    </div>

    <button id="on" class="btn btn-info" onclick="ans()"> Calculate </button>

    <button class="btn btn-info" id="sv">Save</button>


</form>
<br />
