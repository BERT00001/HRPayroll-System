@model HRPayroll_System.Models.AddModel



<h1> Create Employee </h1

<input class="btn btn-primary" type="button" value="Home" onclick="@("window.location.href='" + @Url.Action("List", "EmployeeList") + "'");" />

<form method="post" action="Add">

    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> FullName: </label>
        <div class="col-sm-10">
            <input class="form-control" type="text" placeholder="FullName" asp-for="Fullname">
        </div>
    </div>
    
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Birthday: </label>
        <div class="col-sm-10">
            <input class="form-control" type="Date" asp-for="Birthday" >
        </div>
    </div>

        <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> TIN: </label>
        <div class="col-sm-10">
            <input class="form-control"  type="text" oninput="Slice(this)" maxlength="15" placeholder="TIN Number" asp-for="TIN" >
        </div>
    </div>

        <label>Employee Type: </label>  

        <div class="form-check">
            <input class="form-check-input" type="radio" value="Regular"  asp-for="EmployeeType" >
            <label class="form-check-label" for="flexRadioDefault2">    Regular Employee    </label>
        </div><br />
       


        <div class="form-check">
            <input class="form-check-input" type="radio" value="Contractual"  asp-for="EmployeeType" >
            <label class="form-check-label" for="flexRadioDefault2">    Contractual Employee    </label>
        </div><br />
       

            <button asp-action="List" class="btn btn-info">Back</button>
            <button class="btn btn-primary"> Save </button>
            

</form>

    <!-- Slice Each number to 3 and maxnum for html is 15-->
    <script>
        
        function Slice(input) 
        {

          input.value = input.value.replace(/\D/g, "")
                        .replace(/(\d{3})(?=\d)/g, "$1-");

        }
    </script>