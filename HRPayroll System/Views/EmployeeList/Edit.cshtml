@model HRPayroll_System.Models.EditModel

@{
}

<h1> Edit Employee </h1>

<form method="post" action="Edit">

        <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> ID </label>
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="Id" readonly/>
        </div>
    </div>

    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> FullName: </label>
        <div class="col-sm-10">
            <input class="form-control" type="text"  asp-for="Fullname"/>
        </div>
    </div>
    
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Birthday: </label>
        <div class="col-sm-10">
            <input class="form-control" type="Date" asp-for="Birthday">
        </div>
    </div>

    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> TIN: </label>
        <div class="col-sm-10">
            <input class="form-control"  type="text" oninput="Slice(this)" maxlength="15" placeholder="TIN Number" asp-for="TIN" >
        </div>
    </div>

    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Days At Work: </label>
        <div class="col-sm-10">
            <input class="form-control" type="number" asp-for="DaysAtWor">
        </div>
    </div>

    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Standard Salary: </label>
        <div class="col-sm-10">
            <input class="form-control" type="number" asp-for="StandardSalary">
        </div>
    </div>

    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Tax(%): </label>
        <div class="col-sm-10">
            <input class="form-control" type="number" asp-for="TaxRate">
        </div>
    </div>

    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Overall Total: </label>
        <div class="col-sm-10">
            <input class="form-control" type="number" asp-for="OverallTotal">
        </div>
    </div>

        <label>Employee Type: </label>  

    <div class="form-check">        
            <input class="form-check-input" type="radio" value="Regular"asp-for="EmployeeType">
            <label class="form-check-label" for="flexRadioDefault1">    Regular Employee    </label>
    </div>

    <div class="form-check">
            <input class="form-check-input" type="radio" value="Contractual"  asp-for="EmployeeType" >
            <label class="form-check-label" for="flexRadioDefault2">    Contractual Employee    </label>
    </div><br />
       
            <button class="btn btn-primary"> Save </button>
     

</form>

    <!-- Slice Each number to 3 and maxnum for html is 15-->
    <script>
        
        function Slice(input) 
        {

          input.value = input.value.replace(/\D/g, "")
                        .replace(/(\d{3})(?=\d)/g, "$1-");

        }
    </script>
