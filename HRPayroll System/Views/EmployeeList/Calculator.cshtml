@model HRPayroll_System.Models.RegularModel

@{
}

<h1> Regular Calculator </h1>



<form class="row g-3" method="post" action="Calculator">

    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> ID </label>
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="Id" readonly>
        </div>
    </div>

    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> FullName: </label>
        <div class="col-sm-10">
            <input class="form-control" type="text" placeholder="FullName" asp-for="Fullname" readonly>
        </div>
    </div>

    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> TIN: </label>
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="TIN" readonly>
        </div>
    </div>

    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-4 col-form-label"> Employee Type: </label>
        <input class="form-control" type="text" asp-for="EmployeeType" readonly />
    </div>



    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-4 col-form-label"> Absences: </label>
        <!-- Patter to 2decimal places w/o Js-->
        <input class="form-control" type="text" inputmode="numeric" pattern="[-+]?[0-9]*[.,]?[0-9]+" name="Absences" asp-for="Absences">

    </div>



    <div class="col-md-4">
        <label for="inputEmail3" class="col-sm-4 col-form-label"> Overall Total: </label>
        <input class="form-control" type="number" min="0" name="getting" asp-for="OverallTotal" readonly />
    </div>

    <button class="btn btn-info" name="click" value="submit"> Calculate </button> <!-- Clicke once and change database values-->

</form> <br /> <br/>

<input class="btn btn-primary" type="button" value="< Back" onclick="@("window.location.href='" + @Url.Action("List", "EmployeeList") + "'");" />